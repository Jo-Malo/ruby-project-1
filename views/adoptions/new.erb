<h3>Match an owner with a capybara!</h3>



<form action="/adoptions" method="post">
  <label>
  Select a capybara:
    <select name="capybara_id">
      <% for capybara in @capybaras %>
      <option value="<%= capybara.id %>"><%= capybara.name %></option>
      <% end %>
    </select>
  </label>
  <br><br>
  <label>
    Select an owner:
    <select name="owner_id">
      <% for owner in @owners %>
      <option value="<%= owner.id %>"><%= owner.name %></option>
      <% end %>
    </select>
  </label>
   <input type="submit" value="Click to Adopt">
</form>
